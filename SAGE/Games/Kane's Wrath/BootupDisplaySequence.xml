<?xml version="1.0" encoding="utf-8" ?>
<AssetDefinition xmlns="uri:thundermods.net:SAGE:WrathEdXML:AssetDefinition">

	<EnumAsset
		id="BootupDisplayItemType">
		<Entry>STATIC_SCREEN</Entry>
		<Entry>LOAD_SCREEN</Entry>
		<Entry>MOVIE</Entry>
	</EnumAsset>

	<Asset
		id="BootupDisplayItem">
		<Entry
			id="Type"
			AssetType="BootupDisplayItemType"
			IsAttribute="true"
			IsRequired="true" />
		<Entry
			id="Duration"
			AssetType="SageInt"
			IsAttribute="true" />
		<Entry
			id="Priority"
			AssetType="SageInt"
			IsAttribute="true"
			IsRequired="true" />
		<EntryList
			id="RandomTexture"
			AssetType="TextureRef"
			MinLength="0"
			MaxLength="0" />
		<EntryRelocation
			id="RandomTexture"
			AssetType="String" />
		<Entry
			id="ShowOnReboot"
			AssetType="SageBool"
			IsAttribute="true"
			IsRequired="true" />
		<Entry
			id="fill"
			AssetType="Byte"
			IsVoid="true" />
	</Asset>

	<GameAsset
		id="BootupDisplaySequence"
		TypeHash="0">
		<EntryInheritance
			id="base"
			AssetType="BaseAssetType" />
		<EntryReference
			id="LoadingTextTexture"
			AssetType="Texture"
			IsAttribute="true"
			IsRequired="true" />
		<EntryList
			id="DisplayItem"
			AssetType="BootupDisplayItem"
			MinLength="0"
			MaxLength="0" />
	</GameAsset>

</AssetDefinition>