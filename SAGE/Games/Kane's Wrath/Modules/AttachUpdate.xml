		<Entry
			id="ParentOwnerAttachmentEvaEvent"
			AssetType="String"
			IsAttribute="true" />
		<Entry
			id="ParentAllyAttachmentEvaEvent"
			AssetType="String"
			IsAttribute="true" />
		<Entry
			id="ParentEnemyAttachmentEvaEvent"
			AssetType="String"
			IsAttribute="true" />
